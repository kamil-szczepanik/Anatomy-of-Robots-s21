
<robot name="robot">

<link name="base">
  <inertial>
    <mass value="1"/>
    <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
    <origin/>
  </inertial>
  <visual>
    <origin xyz="0 0 0.05"/>
    <geometry>
      <box size="1 1 0.1"/>
    </geometry>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </visual>

  <collision>
    <origin xyz="0 0 0.05"/>
    <geometry>
      <box size="1 1 0.1"/>
    </geometry>
    <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
  </collision>
</link>

<joint name="base-connect" type="revolute">
  <origin xyz="0 0 0.15" />
  <parent link="base"/>
  <child link="base-ext"/>
  <axis xyz="0 0 1" />
  <limit upper="0" lower="0.0" effort="10" velocity="10" />
</joint>

<link name="base-ext">
  <inertial>
    <mass value="1"/>
    <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
    <origin/>
  </inertial>

  <visual>
    <origin xyz="0 0 0" />
    <geometry>
      <sphere radius="0.15"/>
    </geometry>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </visual>

  <collision>
    <origin xyz="0 0 0" />
    <geometry>
      <sphere radius="0.15"/>
    </geometry>
    <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
  </collision>
</link>

<joint name="base-arm" type="revolute">
  <origin xyz="0 0 0" />
  <parent link="base-ext"/>
  <child link="arm"/>
  <axis xyz="1 0 0"/>
  <limit upper="3.14" lower="0.0" effort="10" velocity="10" />
</joint>

<link name="arm">
  <inertial>
    <mass value="1"/>
    <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
    <origin/>
  </inertial>

  <visual>
    <origin xyz="0 0.5 0" rpy="1.57 0 0"/>
    <geometry>
      <cylinder radius="0.05" length="1" />
    </geometry>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </visual>

  <collision>
    <origin xyz="0 0.5 0" rpy="1.57 0 0"/>
    <geometry>
      <cylinder radius="0.05" length="1" />
    </geometry>
    <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
  </collision>
</link>

<joint name="arm-hand" type="revolute">
  <origin xyz="0 1 0"/>
  <parent link="arm"/>
  <child link="hand"/>
  <axis xyz="1 0 0"/>
  <limit upper="0" lower="-3.14" effort="10" velocity="10" />
</joint>

<link name="hand">
  <inertial>
    <mass value="1"/>
    <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
    <origin/>
  </inertial>

  <visual>
    <origin xyz="0 0 0.35" rpy="0 0 0"/>
    <geometry>
      <cylinder radius="0.05" length="0.7" />
    </geometry>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </visual>

  <collision>
    <origin xyz="0 0 0.35" rpy="0 0 0"/>
    <geometry>
      <cylinder radius="0.05" length="0.7" />
    </geometry>
    <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
  </collision>
</link>

<joint name="joint" type="fixed">
  <origin xyz="0 1 0"/>
  <parent link="arm"/>
  <child link="joint-ball"/>
</joint>

<link name="joint-ball">
  <inertial>
    <mass value="1"/>
    <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
    <origin/>
  </inertial>

  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <sphere radius="0.05"/>
    </geometry>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </visual>

  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <sphere radius="0.05"/>
    </geometry>
    <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
  </collision>
</link>

</robot>
