
<robot name="robot">

<link name="base">
  <inertial>
    <mass value="1"/>
    <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
    <origin/>
  </inertial>
  <visual>
    <origin xyz="0 0 0.05"/>
    <geometry>
      <box size="1 1 0.1"/>
    </geometry>
    <material name="gray">
      <color rgba="0.2 0.2 0.2 1"/>
    </material>
  </visual>

  <collision>
    <origin xyz="0 0 0.05"/>
    <geometry>
      <box size="1 1 0.1"/>
    </geometry>
    <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
  </collision>
</link>

<joint name="base-connect" type="fixed">
  <origin xyz="0 0 0.1" />
  <parent link="base"/>
  <child link="base-ext"/>
</joint>

<link name="base-ext">
  <inertial>
    <mass value="1"/>
    <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
    <origin/>
  </inertial>

  <visual>
    <origin xyz="0 0 0.2" />
    <geometry>
      <cylinder radius="0.1" length="0.2" />
    </geometry>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </visual>

  <collision>
    <origin xyz="0 0 0.2" />
    <geometry>
      <cylinder radius="0.1" length="0.2" />
    </geometry>
    <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
  </collision>
</link>

<link name="arm">
  <inertial>
    <mass value="1"/>
    <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100" />
    <origin/>
  </inertial>

  <visual>
    <origin xyz="0 0.5 0.25" rpy="1.57 0 0"/>
    <geometry>
      <cylinder radius="0.1" length="1" />
    </geometry>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </visual>

  <collision>
    <origin xyz="0 0.5 0.25" rpy="1.57 0 0"/>
    <geometry>
      <cylinder radius="0.1" length="1" />
    </geometry>
    <contact_coefficients mu="0" kp="1000.0" kd="1.0"/>
  </collision>
</link>

<joint name="base-arm" type="fixed">
  <origin xyz="0 0 0.2" />
  <parent link="base-ext"/>
  <child link="arm"/>
</joint>


</robot>
