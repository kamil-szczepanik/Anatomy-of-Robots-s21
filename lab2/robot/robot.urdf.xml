<robot name="robot">

<link name="base">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.5" length="0.05"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
  </visual>
</link>

<joint name="base-base_ext" type="revolute">
  <origin xyz="0 0 0" rpy="0 0 0"/>
  <parent link="base"/>
  <child link="base_ext"/>
  <axis xyz="0 0 1"/>
  <limit upper="0" lower="0" effort="10" velocity="10"/>
</joint>

<link name="base_ext">
  <visual>
    <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.0"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
  </visual>
</link>

<joint name="base_ext-arm" type="revolute">
  <origin xyz="0 0 0" rpy="0 0 0"/>
  <parent link="base_ext"/>
  <child link="arm"/>
  <axis xyz="0 0 1"/>
  <limit upper="0" lower="0" effort="10" velocity="10"/>
</joint>

<link name="arm">
  <visual>
    <origin xyz="0.25 0 0.0" rpy="0 1.5707963267948966 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
  </visual>
</link>

<joint name="arm-hand" type="revolute">
  <origin xyz="0.5 0 0" rpy="-1.57 0 0"/>
  <parent link="arm"/>
  <child link="hand"/>
  <axis xyz="0 0 1"/>
  <limit upper="0" lower="0" effort="10" velocity="10"/>
</joint>

<link name="hand">
  <visual>
    <origin xyz="0.1 0 0.0" rpy="0 1.5707963267948966 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.2"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
  </visual>
</link>

<joint name="hand-tool" type="fixed">
  <origin xyz="0.2 0 0" rpy="0 0 0"/>
  <parent link="hand"/>
  <child link="tool"/>
  <axis xyz="0 0 0"/>
  <limit upper="0" lower="0" effort="10" velocity="10"/>
</joint>

<link name="tool">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.045" length="0.01"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
  </visual>
</link>

</robot>
